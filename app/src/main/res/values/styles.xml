<resources xmlns:android="http://schemas.android.com/apk/res/android">

	 <!-- Application theme. -->
    <style name="SMTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>
    
    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TitleTextViewStyle" parent="@style/TextViewStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">#f5f5f5</item>
    </style>
    
    <style name="CheckBoxStyle">
        <item name="android:background">@color/black_transparent</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/custom_checkbox</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">right</item>
    </style>
    
    <style name="ToastText">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>